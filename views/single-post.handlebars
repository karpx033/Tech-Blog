<div>
  <div>
    <p>{{post.title}}</p>

    <p>Created by {{User.username}} on {{format_date post.createdAt}}</p>
  </div>
  <div>
    <p>{{post.body}}</p>
  </div>
</div>

<form id="new-comment-form">
    <input type="hidden" name="post-id" value="{{post.id}}" />
      <div class="form-group">
        <label>Comment:</label>
        <textarea class="form-input" type="text" name="comment-body"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>

<script src="/js/comment.js"></script>