<div>
  <div>
    <p>{{post.title}}</p>

    <p>Created by {{post.User.username}} on {{format_date post.createdAt}}</p>
  </div>
  <div>
    <p>{{post.body}}</p>
  </div>
</div>

<form id="edit-post-form">
    <input type="hidden" name="post-id" value="{{post.id}}"/>
    <input type="hidden" name="post-title" value="{{post.title}}"/>
      <div class="form-group">
        <label>New Description:</label>
        <textarea class="form-input" type="text" name="post-body"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
    <button id="delete-btn">Delete Post</button>

<script src="/js/edit.js"></script>
