{{#each posts as |post| }}
<div class="card justify-space-between">
  <div class="card-header flex-row justify-space-around">
    <h2 class=""><a href="/post/{{post.id}}">Title: {{post.title}}</a></h2>
    <h2 class="">Created by {{User.username}} on {{format_date createdAt}}</h2>
  </div>
  <div class="card-body">
    <h3>
      {{post.body}}
    </h3>
  </div>
</div>
{{/each}}

        
  